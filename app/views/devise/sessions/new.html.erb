<div class="col-md-4 col-md-offset-4">
  <div class="card-glass">
    <div class="card-header">
      <div class="card-title">
        <div class="row text-center">
          <%=image_tag("logo_noback.png", height: 150, width: 150, class: 'img-circle img-responsive center-block') %>
        </div>
        <h4 class="title text-center">Account Sign-in</h4>
        <hr>
      </div>
    </div>
    <div class="card-body">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%=render 'layouts/flash' %>
        <div class="form-inputs">
          <%= f.input :login, required: true, label: 'Username / Email', autofocus: true %>
          <%= f.input :password, required: true %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <hr>
        <%= f.button :submit, "Log in", class: 'btn btn-block btn-info' %>
        <br>
        <br>
      <% end %>
    </div>
  </div>
</div>
