<div class="col-md-8 col-md-offset-2">
	<h1>Students
		<div class="pull-right">
			<%=link_to "New Student", new_student_path, class: 'btn btn-primary' %>
		</div>
	</h1>
	<hr>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Name</th>
				<th>ID Number</th>
				<th>Gender</th>
				<th>Course/Yr. Level</th>
			</tr>
		</thead>
		<tbody>
			<% @students.each do |student| %>
				<tr>
					<td><%= link_to student.full_name, profile_student_path(student) %></td>
					<td><%= student.id_number %></td>
					<td><%= student.gender %></td>
					<td><%= student.course %> - <%= student.year_level %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>