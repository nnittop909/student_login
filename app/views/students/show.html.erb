<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-6">
    <h3>Student Information</h3>
    <table class="table">
      <tr>
        <td>First name</td>
        <td class="text-info"><%= @student.first_name %></td>
      </tr>
      <tr>
        <td>Last name</td>
        <td class="text-info"><%= @student.last_name %></td>
      </tr>
      <tr>
        <td>Middle name</td>
        <td class="text-info"><%= @student.middle_name %></td>
      </tr>
      <tr>
        <td>Id Number</td>
        <td class="text-info"><%= @student.id_number %></td>
      </tr>
      <tr>
        <td>Course/Year</td>
        <td class="text-info"><%= @student.course_and_year %></td>
      </tr>
      <tr>
        <td>Gender</td>
        <td class="text-info"><%= @student.gender.capitalize %></td>
      </tr>
      <tr>
        <td>Address</td>
        <td class="text-info"><%= @student.address %></td>
      </tr>
    </table>
  </div>
  <div class="col-md-6">
    <h3>Internet Usage  </h3>
    <div class="row">
      <div class="col-md-4">
        <h3 class="text-center text-warning"><%= @student.internet_usages.total_time_consumption %></h3>
        <p class="text-center">CONSUMPTION</p>
      </div>
      <div class="col-md-4">
        <h3 class="text-center text-success"><%= @student.internet_usages.total_remaining %></h3>
        <p class="text-center">REMAINING</p>
      </div>
      <div class="col-md-4">
        <h3 class="text-center text-danger"><%= @student.internet_usages.excess %></h3>
        <p class="text-center">EXCESS</p>
      </div>
    </div>
    <hr>
    <table class="table">
      <thead>
        <tr>
          <th>Time In</th>
          <th>Time Out</th>
          <th>Time Consumed</th>
        </tr>
      </thead>
      <tbody>
        <% @student.internet_usages.each do |internet_usage| %>
          <tr>
            <td><%= internet_usage.time_in.strftime("%B %d, %Y at %I:%M%p") %></td>
            <td><%= internet_usage.time_out.strftime("%B %d, %Y at %I:%M%p") %></td>
            <td><%= internet_usage.usage_in_time_format %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
