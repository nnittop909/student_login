<!DOCTYPE html>
<html>
  <head>
    <title>UsernameLogin</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if user_signed_in? %>
    	<div class="pull-right">
        Hello <b style="font-size:15px"><%= current_user.username %>!</b> |
    		<%=link_to "Sign out", destroy_user_session_path, method: :delete, data: {confirm: "Are you sure you want to sign out?"} %>
  		</div>
    <% end %>
    <div class="col-md-12">
    <%= link_to "Student Login", student_logins_path %> <% if user_signed_in? %>| <%= link_to "Logged List", logins_path %> | <%= link_to "Students", root_path %> <% end %>
    </div>
    <%= render 'layouts/flash' %>
    <%= yield %>
  </body>
</html>
