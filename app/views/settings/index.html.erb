<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<h1>Settings</h1>

		<div class="row">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4> Alloted Usage Time</h4>
				</div>
				<div class="panel-body">
					<% if @alloted_times.present? %>
						<table class="table">
							<tr>
								<td><h4><%= @alloted_times.last.duration %> Hours</h4></td>
								<td class="text-right"><%=link_to 'Update Usage Time', edit_alloted_time_path(@alloted_times.last), class: 'btn btn-warning', remote: true %></td>
							</tr>
						</table>
					<% else %>
						<%=link_to 'Set Usage Time', new_alloted_time_path, class: 'btn btn-primary', remote: true %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>

