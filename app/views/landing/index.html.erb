<div class="col-md-4 col-md-offset-4">
  <div class="card-glass">
    <div class="card-header">
      <div class="card-title">
        <div class="row text-center">
          <%=image_tag("logo_noback.png", height: 150, width: 150, class: 'img-circle img-responsive center-block') %>
        </div>
        <h4 class="title text-center">Internet Monitoring System</h4>
        <hr>
      </div>
    </div>
    <div class="card-body">
      <%=form_tag student_logins_path, method: :get do %>
        <%= text_field_tag :id_number, params[:id_number], class: 'form-control input-lg', placeholder:"ID Number...", autofocus: true, autocomplete: "off" %>
        <br>
        <br>
        <%= submit_tag "Sign-in", name: nil, class: "btn btn-lg btn-block btn-info" %>
      <% end %>
    </div>
  </div>
</div>
