<div class="col-md-4 col-md-offset-8">
  <div class="card-glass">
    <div class="card-header">
      <div class="card-title">
        <div class="row text-center">
          <%=image_tag("user-login.jpg", height: 100, width: 100, class: 'img-circle img-responsive center-block') %>
        </div>
        <h4 class="title text-center">Please Login</h4>
        <hr>
      </div>
    </div>
    <div class="card-body">
      <%=form_tag student_logins_path, method: :get do %>
        <%= text_field_tag :id_number, params[:id_number], class: 'form-control input-lg', placeholder:"ID Number...", autofocus: true %>
        <br>
        <br>
        <%= submit_tag "Sign-in", name: nil, class: "btn btn-lg btn-block btn-info" %>
      <% end %>
    </div>
  </div>
</div>
